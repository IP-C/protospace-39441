<%= form_with(model: Comment.new, url: prototype_comments_path(@prototype), local: true) do |form| %>
  <div class="field">
    <%= form.label :content, "コメント" %><br />
    <%= form.text_field :content, id: "comment_content" %>
  </div>

  <div class="actions">
    <%= form.submit "送信する", class: :form__btn  %>
  </div>
<% end %>
